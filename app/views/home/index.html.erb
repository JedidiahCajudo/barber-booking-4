<section class="hero">
  <div class="hero-content">
    <h2 class="hero-title">The #1 Salon App in Tokyo</h2>
    <form class="hero-search">
      <input type="text" name="service"   placeholder="Service"   />
      <input type="text" name="location"  placeholder="Location"  />
      <input type="date" name="date"      />
      <input type="time" name="time"      />
      <button type="submit" class="search-button">Search</button>
    </form>
  </div>
</section>

<section class="barbershops-list">
  <h2>Browse</h2>

  <% @barbershops.each do |barbershop| %>
    <div>
      <h2><%= barbershop.name %></h2>
        <p><%= barbershop.address %></p>
        <p><%= barbershop.city %></p>
        <p><%= barbershop.instagram %></p>
      <%= link_to 'Select this Barbershop', barbershop_path(barbershop) %>
    </div>
  <% end %>
</section>
