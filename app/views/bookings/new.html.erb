<h1>Book an Appointment at <%= @barbershop.name %></h1>

<%= form_with model: @booking, url: barbershop_bookings_path(@barbershop), method: :post, local: true do |form| %>

  <div class="form-group">
    <%= form.label :service_id, "Select Service" %>
    <%= form.collection_select :service_id, @barbershop.services, :id, :name, prompt: "Choose a service" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, "Select Time" %>
    <%= form.select :start_time, options_for_select(@time_options), { prompt: "Choose a time" } %>
  </div>

  <%= form.submit "Book Appointment" %>

<% end %>
